@model List<WebEcomerce.Models.Product>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}


<div class="container">
    <div class="card">
        <div class="card-header">
            Product
        </div>
        <div class="card-body">
            <div class="add-btn">
                <Button class="btn btn-success" onclick="window.location.href = '@Url.Action("Add", "Admin")'"><i class="fas fa-plus"></i> Add</Button>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product_Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Amout</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@product.ProductName</td>
                            <td>฿@string.Format("{0:N}", @product.Price)</td>
                            <td>@product.Amount</td>
                            <td class="d-flex flex-wrap justify-content-around align-items-md-center">
                                <button class="btn btn-info" onclick="location.href='@Url.Action("Detail", "Admin", new { id = @product.Id })'">View</button>
                                <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Admin", new { id = @product.Id })'">Edit</button>
                                <button class="btn btn-danger" onclick="location.href='@Url.Action("DeleteProduct", "Admin", new { id = @product.Id })'">Delete</button>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

