@model List<WebEcomerce.Models.Product>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<style>
    body {
        background: #3b3b3b;
    }

    .card {
        border-radius: 0;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            Product
        </div>
        <div class="card-body">
            <div class="add-btn">
                <Button class="btn btn-outline-success" onclick="window.location.href = '@Url.Action("Add", "Admin")'"><i class="fas fa-plus"></i> Add</Button>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product_Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Amout</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@product.ProductName</td>
                            <td>฿@string.Format("{0:N}", @product.Price)</td>
                            <td>@product.Amount</td>
                            <td class="d-flex flex-wrap justify-content-around align-items-md-center">
                                <button class="btn btn-outline-info" data-toggle="tooltip" data-placement="bottom" title="View" onclick="location.href='@Url.Action("Detail", "Admin", new { id = @product.Id })'"><i class="fas fa-eye"></i></button>
                                <button class="btn btn-outline-primary" data-toggle="tooltip" data-placement="bottom" title="Edit" onclick="location.href='@Url.Action("Edit", "Admin", new { id = @product.Id })'"><i class="fas fa-edit"></i></button>
                                <a class="btn btn-outline-danger" data-toggle="tooltip" data-placement="bottom" title="Delete" href="@Url.Action("DeleteProduct", "Admin", new { id = @product.Id })" onclick="return confirm('Are you sure you want to Delete?')"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

